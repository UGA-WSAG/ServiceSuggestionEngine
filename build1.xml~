<?xml version="1.0" encoding="UTF-8"?>
<project name="SSE" default="init" basedir=".">
 <!-- set global properties for this build -->
  <property name="src"     location="${basedir}/src"/> 
  <property name="lib"     location="${basedir}/lib"/>
  <property name="classes" location="${basedir}/classes"/>
  <property name="jar"     location="${dist}/SSE"/>
  
<!-- ==================== Compilation Classpath =========================== -->

  <path id="lib">
    <fileset dir="${lib}">
        <include name="*.jar"/>
    </fileset>
  </path>
  <!-- ==================== Run Target ================================== -->

  <target name="init" depends ="clean"
  description="initial the project">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${classes}"/>
  </target>
    <!-- ==================== Run Target ================================== -->

  <target name="compile" depends="init"
          description="compiles the source files">
          <javac srcdir="${src}" 
                 destdir="${classes}"
                 debug="${compile.debug}"
                 deprecation="${compile.deprecation}"
                 optimize="${compile.optimize}">
                 <classpath refid="lib"/> 
                 <!--<compilerarg value="-Xlint:deprecation"/>
                 <compilerarg value="-Xlint:unchecked"/>-->
          </javac>
 </target>  
 <target name="war" depends="compile">
    <war destfile="${basedir}/dist/RadiantWeb.war" webxml="${WEB-INF}/web.xml">
        <fileset dir="${basedir}/web"/>
        <lib dir="${lib}"/>
        <classes dir="${classes}"/>
    </war>
 </target>
  <target name="clean"
        description="clean up" >

    <delete dir="${classes}"/>
    </target>
</project>
